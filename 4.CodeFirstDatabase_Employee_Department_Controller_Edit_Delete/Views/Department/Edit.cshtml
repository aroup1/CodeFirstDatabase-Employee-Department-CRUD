@model _4.CodeFirstDatabase_Employee_Department_Controller_Edit_Delete.Models.Department

@*  @model _4.CodeFirstDatabase_Employee_Department_Controller_Edit_Delete.Models.Department
    eita means 1ta department bujhai *@

@{
    ViewBag.Title = "Edit";
}

<h2>ViewBag.Title</h2>   @* Ekhane Edit lekha replace kore ViewBag.Title lekha hoyeche.
    ViewBag.Title  means container.ViewBag.Title="ekhane ja likha thakbe tai dekhabe"  *@

@*   Html.BeginForm()  means html er Form er suru.eitake Razor Syntex bole  *@

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Department</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2", placeholder = "Department Name" })   @* this is automatic view. Just add this line  ,placeholder="Department Name" *@
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @* col-md-offset-2   offset means colspan *@
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

